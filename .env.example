# ============== DATABASE ==============
# Using SQLite (no installation required)
DATABASE_URL=sqlite:///./stock_predictions.db
# For PostgreSQL, use: postgresql://postgres:password@localhost:5432/stock_predictions

# ============== API SECURITY ==============
API_KEY=your-secure-api-key-here
SECRET_KEY=your-secret-key-for-jwt-tokens

# ============== EXTERNAL APIs ==============
# Get free API key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=
POLYGON_API_KEY=
ALPACA_API_KEY=
ALPACA_SECRET_KEY=

# ============== EMAIL ALERTS ==============
SENDGRID_API_KEY=
EMAIL_FROM=noreply@stockpredictions.com
EMAIL_TO=your-email@example.com

# Gmail SMTP (for direct email alerts)
# See EMAIL_ALERTS_GUIDE.md for setup instructions
ALERT_EMAIL=
ALERT_PASSWORD=
RECIPIENT_EMAIL=

# ============== SMS ALERTS ==============
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
TWILIO_TO_NUMBER=

# ============== APPLICATION ==============
DEBUG=True
LOG_LEVEL=INFO

# ============== DATA FETCHING ==============
DATA_UPDATE_INTERVAL_MINUTES=15
STOCK_UNIVERSE=SP500

# ============== PERFORMANCE ==============
MAX_WORKERS=4
BATCH_SIZE=50
CACHE_TTL_SECONDS=300

# ============== PREDICTIONS ==============
MIN_CONFIDENCE_THRESHOLD=0.55
MAX_PREDICTIONS_PER_DAY=50

# ============== ML MODELS ==============
MODEL_PATH=./ml_models/trained_models
RETRAIN_INTERVAL_DAYS=7
